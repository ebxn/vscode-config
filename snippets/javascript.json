{
  /* general */
  "Import Default Export": {
    "prefix": "imp",
    "body": "import $1 from '$2'",
  },
  "Import Named Export": {
    "prefix": "imd",
    "body": "import { $1 } from '$2'",
  },

  /* vue */
  "Vue Component Import": {
    "prefix": "vc",
    "body": [
      "import $1 from '@/components/$2.vue'"
    ]
  },
  "Vuex Import": {
    "prefix": "vx",
    "body": [
      "import { $1 } from 'vuex'"
    ]
  },
  "Vue Data": {
    "prefix": "vd",
    "body": [
      "data: () => ({",
      "\t$0",
      "}),"
    ]
  },
  "Vue Route": {
    "prefix": "vr",
    "body": [
      "{",
      "\tpath: '/$1',",
      "\tname: '$2',",
      "\tcomponent: () => import(/* webpackChunkName: \"$1\" */ '@/views/$2.vue')",
      "},"
    ]
  },
  "VueX Boilerplate": {
    "prefix": "vxbp",
    "body": [
      "const state = {}",
      "",
      "const mutations = {}",
      "",
      "const actions = {}",
      "",
      "const getters = {}",
      "",
      "export default {",
      "\tnamespaced: true,",
      "\tstate,",
      "\tactions,",
      "\tmutations,",
      "\tgetters",
      "}"
    ]
  }
}
