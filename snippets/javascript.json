{
  "console.log()": {
    "prefix": "con",
    "body": "console.log($0)"
  },

  "querySelector": {
    "prefix": "ds",
    "body": "document.querySelector($1)"
  },

  "querySelectorAll": {
    "prefix": "dsa",
    "body": "document.querySelectorAll($1)"
  },

  "createElement": {
    "prefix": "dce",
    "body": "document.createElement($1)"
  },

